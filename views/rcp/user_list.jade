extends layout

block content
    h4 
        | 환자 리스트
        

    - each row in list
        - var thumb = row.USER_THUMB.split('|')[0]
        - var date = new Date(row.WDATE);
        - var month = eval(date.getMonth()+1);
        - var day = date.getDate();
        - if (eval(date.getMonth()+1) < 10) {
        -     month = "0" + eval(date.getMonth()+1);
        - }
        - if (date.getDate() < 10) {
        -     day = "0" + date.getDate();
        - }
        - var postTime = date.getFullYear() + "-" + month + "-" + day;
        
        div(class='card mt-1 p-2')
            div(class='d-flex flex-row ')
                img(src='#{thumb}' class='rounded-circle' style='width: 40px; height: 40px;')
                div(class='d-flex align-self-center ms-2')
                    = row.USER_NAME
                div(class='d-flex align-self-center ms-auto me-4')
                    = postTime
                div(class='d-flex align-self-center me-2')
                    i(class='fas fa-chevron-right')
                
